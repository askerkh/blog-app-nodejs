<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>
      <div class="form_wrapper">
        <form class="form" method="post" action="/edit/<%= post.id %>?_method=PUT">
          <div class="form_header">
            <input value="<%= post.title %>" style="height: 50px; width: 50%;" type="text" name="title"
              placeholder="edit your title here">
            <input value="<%= post.author %>" style="height: 50px; width: 50%;" type="text" name="author"
              placeholder="edit your name here">
          </div>
          <label>
            <textarea style="height: 180px; max-width: 100%; max-height: 200px; width: 100%;" type="text" name="text"
              placeholder="edit your text here">
              <%= post.text %>
            </textarea>
          </label>
          <button type="submit" style="height: 50px;">UPDATE</button>
        </form>
      </div>
  </body>

</html>
